---
import AboutMe from "@/components/AboutMe.astro";
import BriefcaseIcon from "@/components/icons/BriefcaseIcon.astro";
import Button from "@/components/Button.astro";
import CodeIcon from "@/components/icons/CodeIcon.astro";
import Experience from "@/components/Experience.astro";
import Glow from "@/components/icons/Glow.astro";
import Hero from "@/components/Hero.astro";
import Layout from "@/layouts/Layout.astro";
import Projects from "@/components/Projects.astro";
import Section from "@/components/Section.astro";
import Stack from "@/components/Stack.astro";
---

<Layout title="Portafolio Mauricio Ramírez">
  <main class="px-4">
    <Section id="inicio" class="py-44 pb-20">
      <Hero />
    </Section>

    <Section id="experiencia">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <BriefcaseIcon class="size-7" />
        Experiencia Personal
      </h2>
      <Experience />
    </Section>

    <Section id="proyectos">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </Section>

    <Section id="sobre-mi">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        Sobre mí
      </h2>
      <AboutMe />
    </Section>

    <Section id="stack">
      <h2 class="text-3xl font-semibold gap-x-3">
        Stack
        <Stack />
      </h2>
    </Section>
  </main>
</Layout>
