---
import Badge from "@/components/Badge.astro";
import CSharpIcon from "./icons/CSharpIcon.astro";
import ElementorIcon from "./icons/ElementorIcon.astro";
import IntellijIDEAIcon from "./icons/IntelliJIDEAIcon.astro";
import JavaIcon from "./icons/JavaIcon.astro";
import MSQLSERVERIcon from "./icons/msql.astro";
import MySqlIcon from "./icons/MySqlIcon.astro";
import OracleApexIcon from "./icons/Apex.astro";
import PLSQLIcon from "./icons/PLSQL.astro";
import PostgresqlIcon from "./icons/Postgresql.astro";
import WordPressIcon from "./icons/WordPressIcon.astro";
import Button from "./Button.astro";

const globalIconsClasses = "text-white items-center gap-x-1";
const marcandoPasosImage = "../projects/marcandopasos.png";
const oracleApexApp = "../projects/apex/Screenshot_1.png";

const TAGS = {
  WORDPRESS: {
    name: "WordPress",
    class: globalIconsClasses,
    icon: WordPressIcon,
  },
  ELEMENTOR: {
    name: "Elementor",
    class: globalIconsClasses,
    icon: ElementorIcon,
  },
  JAVA: {
    name: "Java",
    class: globalIconsClasses,
    icon: JavaIcon,
  },
  IDEA: {
    name: "Idea",
    class: globalIconsClasses,
    icon: IntellijIDEAIcon,
  },
  CSHARP: {
    name: "CSharp",
    class: globalIconsClasses,
    icon: CSharpIcon,
  },
  MYSQL: {
    name: "MySql",
    class: globalIconsClasses,
    icon: MySqlIcon,
  },
  SQLSERVER: {
    name: "MSSQL",
    class: globalIconsClasses,
    icon: MSQLSERVERIcon,
  },
  PLSQL: {
    name: "Oracle PLSQL",
    class: globalIconsClasses,
    icon: PLSQLIcon,
  },
  POSTGRESQL: {
    name: "Postgresql",
    class: globalIconsClasses,
    icon: PostgresqlIcon,
  },
  ORACLEAPEX: {
    name: "Oracle Apex",
    class: globalIconsClasses,
    icon: OracleApexIcon,
  },
};

const PROJECTS = [
  {
    title: "Sistema de Ventas",
    description:
      "Una pequeña aplicación construida en la plataforma de Oracle 'Apex', que registra productos, categoría de productos, clientes, ventas, etc.",
    link: "https://oracleapex.com",
    image: oracleApexApp,
    tags: [TAGS.ORACLEAPEX, TAGS.PLSQL],
  },
  {
    title: "CRUD",
    description:
      "En este proyecto utilice tecnologias de Microsoft, los famosos Windows Forms acompañado del gestor de base de datos Microsoft SQL Server",
    link: "https://github.com/MauricioFRC",
    github: "https://github.com/MauricioFRC/MauricioFRC",
    image: "",
    tags: [TAGS.CSHARP, TAGS.POSTGRESQL],
  },
  {
    title: "Marcando Pasos",
    description:
      'El proyecto "Marcando Pasos" fue un proyecto hecho a medida para un centro de Rehabilitación privada sin fines de lucro que ofrece servicios de rehabilitación para personas con "Capacidades Diferentes Marcando Pasos".',
    link: "https://www.marcandopasos.org.py/",
    image: marcandoPasosImage,
    tags: [TAGS.WORDPRESS, TAGS.ELEMENTOR],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags, link }) => (
    <article>
      <h3 class="text-2xl font-semibold text-blue-400">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <img
        class="rounded-2xl"
        src={image}
        alt={`Imágen del proyecto ${image}`}
      />
      <ul class="mb-2 inline-flex gap-x-2 pt-5 items-center">
        {tags.map((tag) => (
          <li class="mb-14">
            <Badge>
              <span class={`flex gap-x-2${tag.class}`}>
                <tag.icon class="size-6" />
                {tag.name}
              </span>
            </Badge>
          </li>
        ))}
        <Button>
          <a
            href={link}
            target="_blank"
            class="flex items-center hover:text-blue-700"
          >
            Enlace del Proyecto{" "}
            <svg
              class="w-3 h-3 ms-2 rtl:rotate-180"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
              />
            </svg>
          </a>
        </Button>
      </ul>
    </article>
  ))
}
