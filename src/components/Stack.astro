---
import AstroIcon from "./icons/AstroIcon.astro";
import BlenderIcon from "./icons/BlenderIcon.astro";
import CSharpIcon from "./icons/CSharpIcon.astro";
import CSSIcon from "./icons/CSSIcon.astro";
import DJangoIcon from "./icons/DJangoIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import GitIcon from "./icons/GitIcon.astro";
import GlowIcons from "@/components/GlowIcons.astro";
import HTMLIcon from "./icons/HTMLIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import LinuxIcon from "./icons/LinuxIcon.astro";
import Msql from "./icons/msql.astro";
import MySqlIcon from "./icons/MySqlIcon.astro";
import NextJS from "./icons/NextJS.astro";
import Postgresql from "./icons/Postgresql.astro";
import PythonIcon from "./icons/PythonIcon.astro";

const iconList = [
  { name: "PYTHON", icon: PythonIcon },
  { name: "CSHARP", icon: CSharpIcon },
  { name: "JAVASCRIPT", icon: JavaScriptIcon },
  { name: "HTML", icon: HTMLIcon },
  { name: "CSS", icon: CSSIcon },
  { name: "POSTGRESQL", icon: Postgresql },
  { name: "MYSQL", icon: MySqlIcon },
  { name: "SQL SERVER", icon: Msql },
  { name: "ASTRO", icon: AstroIcon },
  { name: "NEXTJS", icon: NextJS },
  { name: "DJANGO", icon: DJangoIcon },
  { name: "GITHUB", icon: GitHubIcon },
  { name: "GIT", icon: GitIcon },
  { name: "BLENDER", icon: BlenderIcon },
  { name: "LINUX", icon: LinuxIcon },
];
---

<div
  class="grid lg:grid-cols-5 md:grid-cols-4 grid-cols-3 items-center text-center"
>
  {
    iconList.map(({ icon: IconComponent, name }) => (
      <GlowIcons>
        <IconComponent class="size-14 m-auto" />
        <p class="mt-2 text-xs">{name}</p>
      </GlowIcons>
    ))
  }
</div>
